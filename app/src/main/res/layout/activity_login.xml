<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bk"
    tools:context="club.ah12530.myim.ui.activity.LoginActivity">
<ImageView
    android:layout_width="@dimen/avatar_size60"
    android:layout_height="@dimen/avatar_size60"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/avatar_size30"
    android:src="@mipmap/default_avatar"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="@string/username"
        android:imeOptions="actionNext"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="@string/pwd"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/avatar_size10"
        android:layout_marginTop="@dimen/avatar_size15"
        android:text="@string/login"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_selector"
        android:textSize="@dimen/avatar_size30"/>
    <TextView
        android:id="@+id/tv_newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/avatar_size20"
        android:layout_marginTop="@dimen/avatar_size10"
        android:text="@string/newuser"
        android:clickable="true"
        android:textColor="@color/btn_normal"/>
</LinearLayout>
