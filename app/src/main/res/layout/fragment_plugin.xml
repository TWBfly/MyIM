<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="club.ah12530.myim.ui.fragment.PluginFragment">

    <ImageView
        android:layout_width="@dimen/avatar_size60"
        android:layout_height="@dimen/avatar_size60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/avatar3"
        />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/logout_btn_selector"
        android:text="退(iiTTTiii)出"
        android:textColor="#ffffff"
        android:textSize="@dimen/avatar_size30"/>

    <CalendarView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
